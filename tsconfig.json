{
    "compilerOptions": {

        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-native",

        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,

        "baseUrl": "./src/",
        "paths": {
            "@vplugins/*": ["./plugins/*"],
            "@vtypes/*": ["./types/*"]
        },

        "outDir": "dist"

    },

    "include": [
        "src/**/*",
    ]

}
